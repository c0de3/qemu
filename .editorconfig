# http://editorconfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.mak]
indent_style = tab
indent_size = 8
file_type_emacs = makefile

[Makefile*]
indent_style = tab
indent_size = 8
file_type_emacs = makefile

[*.{c,h}]
indent_style = space
indent_size = 4

[*.{vert,frag}]
file_type_emacs = glsl

[*.json]
indent_style = space
file_type_emacs = python
